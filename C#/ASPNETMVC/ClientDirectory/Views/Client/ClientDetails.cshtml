@model ClientDirectory.Models.ClientInfo

<h2>Client Details</h2>

@if (Model == null)
{
    <p>Client not found.</p>
}
else
{
    <table class="table">
        <tr><th>ClientId</th><td>@Model.ClientId</td></tr>
        <tr><th>Company Name</th><td>@Model.CompanyName</td></tr>
        <tr><th>Website</th><td><a href="@Model.WebUrl">@Model.WebUrl</a></td></tr>
        <tr><th>Email</th><td>@Model.Email</td></tr>
        <tr><th>Category</th><td>@Model.Category</td></tr>
        <tr><th>Standard</th><td>@Model.Standard</td></tr>
    </table>
}

